{
  "name": "flatcoin-v1",
  "version": "1.0.0",
  "description": "Flatcoin V1",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "lint:sol": "solhint 'src/**/*.sol' --max-warnings 0",
    "lint:sol:fix": "pnpm lint:sol -- --fix",
    "test": "forge t",
    "test:unit": "forge t --no-match-test '(test_fuzz:?)'",
    "test:fuzz": "forge t --match-test '(test_fuzz:?)'",
    "abigen": "hardhat export-abi",
    "run:oz": "forge clean && FOUNDRY_PROFILE=openzeppelin forge script",
    "prettier:check": "prettier --check --plugin=prettier-plugin-solidity '{src,test,script}/**/*.sol'",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhedge/flatcoin-v1.git"
  },
  "author": "dHEDGE",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dhedge/flatcoin-v1/issues"
  },
  "homepage": "https://github.com/dhedge/flatcoin-v1#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/upgrades-core": "^1.32.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.12.1",
    "hardhat": "^2.22.3",
    "hardhat-abi-exporter": "^2.10.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.4"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  }
}
